import tkinter as tk
from tkinter import ttk, messagebox
import sqlite3
import datetime

# Database Setup
conn = sqlite3.connect("finance.db")
cur = conn.cursor()

cur.execute("""
CREATE TABLE IF NOT EXISTS transactions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL,
    amount REAL NOT NULL,
    category TEXT NOT NULL,
    date TEXT NOT NULL
)
""")
conn.commit()

# Finance Tracker App
class FinanceTracker:
    def __init__(self, root):
        self.root = root
        self.root.title("Finance Tracker")
        self.root.geometry("650x550")

        # Top Input Frame
        input_frame = ttk.LabelFrame(root, text="Add Transaction")
        input_frame.pack(fill="x", padx=10, pady=10)

        # Type
        ttk.Label(input_frame, text="Type").grid(row=0, column=0, padx=5, pady=5)
        self.type_var = tk.StringVar(value="income")
        ttk.Combobox(
            input_frame, textvariable=self.type_var, state="readonly",
            values=["income", "expense"], width=12
        ).grid(row=0, column=1, padx=5, pady=5)

        # Amount
        ttk.Label(input_frame, text="Amount ($)").grid(row=0, column=2, padx=5, pady=5)
        self.amount_entry = ttk.Entry(input_frame, width=15)
        self.amount_entry.grid(row=0, column=3, padx=5, pady=5)

        # Category
        ttk.Label(input_frame, text="Category").grid(row=1, column=0, padx=5, pady=5)
        self.category_entry = ttk.Entry(input_frame, width=20)
        self.category_entry.grid(row=1, column=1, padx=5, pady=5)

        # Add Button
        ttk.Button(input_frame, text="Add", command=self.add_transaction).grid(
            row=1, column=3, padx=5, pady=5
        )

        # Summary Frame
        summary_frame = ttk.LabelFrame(root, text="Summary")
        summary_frame.pack(fill="x", padx=10, pady=10)

        self.income_label = ttk.Label(summary_frame, text="Total Income: $0.00")
        self.expense_label = ttk.Label(summary_frame, text="Total Expenses: $0.00")
        self.net_label = ttk.Label(summary_frame, text="Net Savings: $0.00")

        self.income_label.pack(anchor="w", padx=10, pady=2)
        self.expense_label.pack(anchor="w", padx=10, pady=2)
        self.net_label.pack(anchor="w", padx=10, pady=2)

        # Transaction Table
        table_frame = ttk.LabelFrame(root, text="Transactions")
        table_frame.pack(fill="both", expand=True, padx=10, pady=10)

        columns = ("id", "type", "amount", "category", "date")
        self.tree = ttk.Treeview(table_frame, columns=columns, show="headings")

        for col in columns:
            self.tree.heading(col, text=col.capitalize())
            self.tree.column(col, anchor="center")

        self.tree.column("id", width=40)
        self.tree.column("amount", width=100)
        self.tree.column("type", width=80)
        self.tree.column("category", width=150)
        self.tree.column("date", width=120)

        self.tree.pack(fill="both", expand=True)

        # Delete button
        ttk.Button(root, text="Delete Selected", command=self.delete_transaction).pack(
            pady=5
        )

        # Load initial data
        self.load_transactions()
        self.update_summary()

    # Add Transaction
    def add_transaction(self):
        t_type = self.type_var.get()
        category = self.category_entry.get().strip()
        date = datetime.date.today().isoformat()

        # Validate amount
        try:
            amount = float(self.amount_entry.get())
            if amount <= 0:
                raise ValueError
        except ValueError:
            messagebox.showerror("Invalid Amount", "Enter a valid positive number.")
            return

        if category == "":
            category = "Uncategorized"

        cur.execute(
            "INSERT INTO transactions (type, amount, category, date) VALUES (?, ?, ?, ?)",
            (t_type, amount, category, date)
        )
        conn.commit()

        self.load_transactions()
        self.update_summary()

        self.amount_entry.delete(0, tk.END)
        self.category_entry.delete(0, tk.END)

    # Load Transactions into Table
    def load_transactions(self):
        for row in self.tree.get_children():
            self.tree.delete(row)

        cur.execute("SELECT * FROM transactions ORDER BY id DESC")
        rows = cur.fetchall()

        for row in rows:
            self.tree.insert("", tk.END, values=row)

    # Update Summary
    def update_summary(self):
        cur.execute("SELECT type, SUM(amount) FROM transactions GROUP BY type")
        sums = cur.fetchall()

        income = 0.0
        expenses = 0.0

        for t_type, total in sums:
            if t_type == "Income":
                income = total
            elif t_type == "Expense":
                expenses = total

        net = income - expenses

        self.income_label.config(text=f"Total Income: ${income:.2f}")
        self.expense_label.config(text=f"Total Expenses: ${expenses:.2f}")
        self.net_label.config(text=f"Net Savings: ${net:.2f}")

    # Delete Selected
    def delete_transaction(self):
        selected = self.tree.selection()
        if not selected:
            messagebox.showerror("Error", "No transaction selected.")
            return

        item = self.tree.item(selected[0])
        entry_id = item["values"][0]

        cur.execute("DELETE FROM transactions WHERE id=?", (entry_id,))
        conn.commit()

        self.load_transactions()
        self.update_summary()


# Run the App
if __name__ == "__main__":
    root = tk.Tk()
    app = FinanceTracker(root)
    root.mainloop()
